@model TaxiSoftWeb.Models.Turno

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>
<h3>¿Estás seguro de que quieres eliminarlo?</h3>
<div>
    <h4>Turno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Turno:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomTurno)
        </dd>
        <dt class="col-sm-2">
            Hora de inicio:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class="col-sm-2">
            Hora de finalización:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraFin)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTurno" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
