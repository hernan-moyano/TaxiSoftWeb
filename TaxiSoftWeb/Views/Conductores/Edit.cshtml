@model TaxiSoftWeb.Models.Conductore

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Chofer</h4>
<hr />
<div class="container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Cuil" />
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="FechaNacimiento" class="control-label">Fecha de nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Telefono" class="control-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="IdTurno" class="control-label">Turno</label>
                <select asp-for="IdTurno" class="form-control" asp-items="ViewBag.IdTurno">
                    <option>Seleccione un Turno.</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="IdVehiculo" class="control-label">Movil</label>
                <select asp-for="IdVehiculo" class="form-control" asp-items="ViewBag.IdVehiculo">
                    <option>Seleccione un Movil.</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="IdPuesto" class="control-label">Puesto</label>
                <select asp-for="IdPuesto" class="form-control" asp-items="ViewBag.IdPuesto">
                    <option>Seleccione un Puesto.</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="IdCarnet" class="control-label">Carnet</label>
                <select asp-for="IdCarnet" class="form-control" asp-items="ViewBag.IdCarnet">
                    <option>Seleccione un Carnet.</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="IdDomicilio" class="control-label">Domicilio</label>
                <select asp-for="IdDomicilio" class="form-control" asp-items="ViewBag.IdDomicilio">
                    <option>Elija un Domicilio.</option>
                </select>
            </div>
        </div>
        <div class="form-group col-md-5">
            <label class="control-label">Vigente</label>
            <div style="justify-content:space-evenly; padding-right:inherit">
                <label class="form-check-label">Si </label>
                @Html.RadioButtonFor(m => m.Activo,"True")
                <label class="form-check-label">No</label>
                @Html.RadioButtonFor(m => m.Activo,"False")
            </div>
        </div>
        <div class="form-group col-md-12">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </form>
</div>


<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
