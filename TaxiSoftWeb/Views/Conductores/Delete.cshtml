@model TaxiSoftWeb.Models.Conductore

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminarlo?</h3>
<div>
    <h4>Chofer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Dni
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Fecha de nacimiento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class="col-sm-2">
            Teléfono
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2">
            Carnet
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdCarnetNavigation.NroCarnet)
        </dd>
        <dt class="col-sm-2">
            Turno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdTurnoNavigation.NomTurno)
        </dd>
        <dt class="col-sm-2">
            Movil
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdVehiculoNavigation.IdVehiculo)
        </dd>

        <dt class="col-sm-2">
            Domicilio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDomicilioNavigation.Calle)
            @Html.DisplayFor(model => model.IdDomicilioNavigation.Numero)-
            @Html.DisplayFor(model => model.IdDomicilioNavigation.Piso)
            @Html.DisplayFor(model => model.IdDomicilioNavigation.Departamento)-
            @Html.DisplayFor(model => model.IdDomicilioNavigation.Ciudad)

        </dd>
        <dt class="col-sm-2">
            Puesto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPuestoNavigation.TarDesepeniada)
        </dd>

        <dt class="col-sm-2">
            Vigente
        </dt>
        <dd class="col-sm-10">
            @if (System.Convert.ToBoolean(@Model.Activo))
            {
                <span>Si</span>
            }
            else
            {
                <span>No</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Cuil" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
