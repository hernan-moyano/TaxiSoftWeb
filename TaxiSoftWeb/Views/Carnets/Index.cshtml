@model IEnumerable<TaxiSoftWeb.Models.Carnet>

@{
    ViewData["Title"] = "Index";
}

<div class="card" style="padding: 1rem;">
    <div class="card-header">
        <h1>Carnets</h1>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table" id="CarnetTable">
            <thead>
                <tr>
                    <th>
                        Número de Carnet
                    </th>
                    <th>
                        Vencimiento
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NroCarnet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VtoCarnet)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdCarnet" class="btn btn-outline-warning"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.IdCarnet" class="btn btn-outline-info"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.IdCarnet" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




