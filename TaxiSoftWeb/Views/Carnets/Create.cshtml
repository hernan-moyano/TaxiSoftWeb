@model TaxiSoftWeb.Models.Carnet

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Carnet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NroCarnet" class="control-label">Número de Carnet</label>
                <input asp-for="NroCarnet" class="form-control" />
                <span asp-validation-for="NroCarnet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VtoCarnet" class="control-label">Vencimiento</label>
                <input asp-for="VtoCarnet" class="form-control" />
                <span asp-validation-for="VtoCarnet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
