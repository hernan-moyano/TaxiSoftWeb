@model TaxiSoftWeb.Models.Carnet

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>
<h3>¿Estás seguro de que quieres eliminarlo?</h3>
<div>
    <h4>Carnet</h4>
    <hr />
     <dl class="row">
        <dt class="col-sm-2">
            Número de Carnet:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NroCarnet)
        </dd>
        <dt class="col-sm-2">
            Vencimiento:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VtoCarnet)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCarnet" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
