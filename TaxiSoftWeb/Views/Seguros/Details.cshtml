@model TaxiSoftWeb.Models.Seguro

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>				
<div>
    <h4>Seguro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movil:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdVehiculoNavigation.IdVehiculo)
        </dd>
        <dt class = "col-sm-2">
            Nro de Poliza:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NroPoliza)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Aseguradora):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aseguradora)
        </dd>
        <dt class = "col-sm-2">
            Vigencia Desde:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VigenciaDesde)
        </dd>
        <dt class = "col-sm-2">
            Vigencia Hasta:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VigenciaHasta)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdSeguro" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
