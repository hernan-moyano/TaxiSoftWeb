@model IEnumerable<TaxiSoftWeb.Models.TiposDeCaja>

@{
    ViewData["Title"] = "Index";
}
<div class="card" style="padding: 1rem;">
    <div class="card-header">
        <h2>Tipos de cajas</h2>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Caja/Chofer
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activo)
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomCaja)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @if (System.Convert.ToBoolean(item.Activo))
                            {
                                <span>Si</span>
                            }
                            else
                            {
                                <span>No</span>
                            }
@*                            @Html.DisplayFor(modelItem => item.Activo)
*@                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdCaja" class="btn btn-outline-warning"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.IdCaja" class="btn btn-outline-info"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.IdCaja" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="card-body">
        <a asp-action="Create" class="btn btn-outline-success"><i class="fas fa-plus"></i> Agregar</a>
    </div>
</div>

