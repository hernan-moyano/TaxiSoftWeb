@model TaxiSoftWeb.Models.TiposDeCaja

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminarlo?</h3>
<div>
    <h4>Tipo de Caja</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Caja/Chofer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomCaja)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class="col-sm-10">
            @if (System.Convert.ToBoolean(@Model.Activo))
            {
                <span>Si</span>
            }
            else
            {
                <span>No</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCaja" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
