@model TaxiSoftWeb.Models.Puesto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Puesto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Categoría:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CalifProfesional)
        </dd>
        <dt class = "col-sm-2">
            Puesto:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TarDesepeniada)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdPuesto" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
