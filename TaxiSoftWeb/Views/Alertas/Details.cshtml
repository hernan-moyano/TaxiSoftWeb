@model TaxiSoftWeb.Models.Alerta

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>
<div>
    <h4>Alerta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha de Inicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaDesde)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Fin
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaHasta)
        </dd>
        <dt class = "col-sm-2">
            Recordatorio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiasAnticipacion)
        </dd>
        <dt class = "col-sm-2">
            Descripcion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEstadoANavigation.NomEstadoA)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdAlerta">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
