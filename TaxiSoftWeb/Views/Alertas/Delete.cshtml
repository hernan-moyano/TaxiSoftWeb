@model TaxiSoftWeb.Models.Alerta

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminarla?</h3>
<div>
    <h4>Alerta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha de Inicio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaDesde)
        </dd>
        <dt class="col-sm-2">
            Fecha de Fin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaHasta)
        </dd>
        <dt class="col-sm-2">
            Recordatorio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiasAnticipacion)
        </dd>
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEstadoANavigation.NomEstadoA)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdAlerta" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
